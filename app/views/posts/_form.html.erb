<%= form_for [@author,@post]  do |f| %>
	<div class="field">
	    <%= f.label :title %><br />
	    <%= f.text_field :title %>
	</div>
	<div class="field">
		<%= f.label :content %><br />
		<%= f.text_field :content %>
	</div>
	<div class="field">
		<%= f.label :tag_names %><br />
		<%= f.text_field :tag_names %>
	<div class="actions">
	  <%= f.submit %>
	</div>
<% end %>