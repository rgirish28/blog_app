<h1><%= @post.title %> - <%= l @post.created_at, :format => :short%></h1>
<p><%= @post.content %></p>

<h3>Comments</h3>
<% @post.comments.each do |comment|%>
<p><%= comment.content%></p>
<p><%= comment.name%></p>
<p><%= comment.email%></p>
<p><hr></p>
<% end %>

<%=link_to "New Comment", new_author_post_comment_path(@post.author,@post)%>

<p><h3> Tags </h3> 
<%@post.tags.each do |tag|%>
<t><%= tag.name%></t>
<% end %>
</p>

<p>
<%= link_to 'Back', author_posts_path %>
<%= link_to 'Home', root_path %>
</p>
