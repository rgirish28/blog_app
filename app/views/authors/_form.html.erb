<%= form_for @author  do |f| %>
	<div class="field">
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	
	<div class="field">
		<%= f.label :facebook %><br />
		<%= f.text_field :facebook %>
	</div>
	<div class="field">
		<%= f.label :twitter %><br />
		<%= f.text_field :twitter %>
	</div>
	<div class="actions">
	  <%= f.submit %>
	</div>
<% end %>